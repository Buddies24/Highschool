@model IEnumerable<School.Models.Grade>

@{
    ViewBag.Title = "Grades";
    IdentitySample.Models.ApplicationDbContext db = new IdentitySample.Models.ApplicationDbContext();
}

<h2>Grades</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GradeNum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GradeLetter)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GradeName)
        </th>
        <th>
            Class
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumOfStudentsInClass)
        </th>
        <th>
            Max Students
        </th>
        <th>
            Teacher
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {

        var classrm = db.Classrooms.FirstOrDefault(a => a.Id == item.ClassroomId);
        var teacher = db.Teachers.FirstOrDefault(a => a.Id == item.teacherId);
        
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.GradeNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GradeLetter)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GradeName)
            </td>
            <td>
                @if (classrm != null)
                {
                    <p>
                        @classrm.RoomName
                    </p>
                }
                else
                {
                    <span>---</span>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumOfStudentsInClass)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxNumOfStudsInClass)
            </td>
            <td>
                @if (teacher != null)
                {
                    <p>
                        @teacher.Name @teacher.MidName @teacher.Surname
                    </p>
                }
                else
                {
                    <span>---</span>
                }
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
