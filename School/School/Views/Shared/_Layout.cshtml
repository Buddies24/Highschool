<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("HS", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>

                    @if (Request.IsAuthenticated && !User.IsInRole("Admin") && !User.IsInRole("Teacher"))
                    {
                        <li>@Html.ActionLink("My Details", "Personal", "Students")</li>
                        <li>@Html.ActionLink("SubjectHistory", "MyHistory", "StudentGradeSubjectHistories")</li>
                    }
                    @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Grades", "Index", "Grades")</li>
                        <li>@Html.ActionLink("Subjects", "Index", "GradeSubjects")</li>
                        <li>@Html.ActionLink("Classes", "Index", "Classrooms")</li>
                        <li>@Html.ActionLink("Streams", "CommingSoon", "Students")</li>
                        <li>@Html.ActionLink("Students", "Manage", "Students")</li>
                        <li>@Html.ActionLink("Add Staff", "Create", "UsersAdmin")</li>
                        <li>@Html.ActionLink("Roles", "Index", "RolesAdmin")</li>
                        <li>@Html.ActionLink("Users", "Index", "UsersAdmin")</li>
                    }
                    @if (Request.IsAuthenticated && User.IsInRole("Teacher"))
                    {
                        <li>@Html.ActionLink("My Students", "MyStudents", "Teachers")</li>
                        <li>@Html.ActionLink("Student Subjects History", "Index", "StudentGradeSubjectHistories")</li>

                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
