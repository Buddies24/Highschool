@model IEnumerable<School.Models.Student>

@{
    ViewBag.Title = "Un-Assigned Students";
}

<h2>Un-Assigned students</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.idNum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.phone)
        </th>
        <th>
            Applied For
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dateRegistered)
        </th>
        <th>Act</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name) @Html.DisplayFor(modelItem => item.MidName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Surname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.idNum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CurrentGrade)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.dateRegistered)
        </td>
        <td>
            @Html.ActionLink("Assign", "AssignToGrade", new { id=item.Id }) 
        </td>
    </tr>
}

</table>
